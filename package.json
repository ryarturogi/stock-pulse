{
  "name": "stock-pulse",
  "version": "1.0.0",
  "description": "Enterprise-grade Next.js 15 + React 19 + TypeScript stock watcher application",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:next": "next lint",
    "format:all": "prettier --write .",
    "check:all": "pnpm run lint && pnpm run type-check && pnpm run format:check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "volta:setup": "volta pin node@20 && volta pin pnpm@8.12.1",
    "node:check": "node --version && pnpm --version",
    "node:upgrade": "volta install node@20 && volta pin node@20",
    "build:analyze": "ANALYZE=true next build",
    "build:vercel": "next build",
    "deploy:vercel": "vercel --prod",
    "deploy:preview": "vercel",
    "vercel:env": "vercel env pull .env.local"
  },
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "lucide-react": "^0.544.0",
    "next": "^15.0.3",
    "postcss": "^8.4.47",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^3.2.1",
    "tailwindcss": "^3.4.14",
    "ws": "^8.18.3",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@next/bundle-analyzer": "^15.0.3",
    "@playwright/test": "^1.48.2",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.8.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/web-push": "^3.6.4",
    "@types/ws": "^8.18.1",
    "babel-plugin-react-compiler": "19.1.0-rc.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "next-pwa": "^5.6.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.1",
  "volta": {
    "node": "20.19.5",
    "pnpm": "8.12.1"
  }
}