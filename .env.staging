# =============================================================================
# STAGING ENVIRONMENT VARIABLES
# =============================================================================
# This file contains example values for staging deployment.
# Staging should mirror production but with test data and relaxed security.
# =============================================================================

# =============================================================================
# PUBLIC ENVIRONMENT VARIABLES (Client-side accessible via NEXT_PUBLIC_)
# WARNING: These will be visible in the browser bundle!
# =============================================================================

# Application Configuration (Safe to expose)
NEXT_PUBLIC_APP_NAME=StockPulse Staging
NEXT_PUBLIC_APP_VERSION=1.0.0-staging

# Feature Flags (Safe to expose - can test new features here)
NEXT_PUBLIC_FEATURE_DARK_MODE=true
NEXT_PUBLIC_FEATURE_NOTIFICATIONS=true
NEXT_PUBLIC_FEATURE_OFFLINE_MODE=true
NEXT_PUBLIC_FEATURE_BETA_FEATURES=true

# PWA Configuration (Safe to expose)
NEXT_PUBLIC_PWA_ENABLED=true

# Performance Settings (Safe to expose - staging optimized)
NEXT_PUBLIC_CACHE_TTL=300000
NEXT_PUBLIC_REQUEST_TIMEOUT=8000

# Push Notification Public Key (Safe to expose - staging key)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_staging_vapid_public_key_here

# Analytics IDs (Safe to expose - use staging/test IDs)
NEXT_PUBLIC_ANALYTICS_ID=your_staging_analytics_id_here
NEXT_PUBLIC_SENTRY_DSN=your_staging_sentry_dsn_here

# =============================================================================
# PRIVATE ENVIRONMENT VARIABLES (Server-side only)
# These are NOT exposed to the browser and remain secure
# =============================================================================

# Environment Configuration
NODE_ENV=staging
LOG_LEVEL=debug

# Stock API Keys (PRIVATE - use staging/test keys when available)
FINNHUB_API_KEY=your_staging_finnhub_api_key_here
ALPHA_VANTAGE_API_KEY=your_staging_alpha_vantage_api_key_here

# Internal API Configuration (PRIVATE)
API_BASE_URL=https://staging-api.stockpulse.com
INTERNAL_API_SECRET=your_staging_internal_api_secret_here

# Security Settings (PRIVATE - different from production!)
JWT_SECRET=your_staging_jwt_secret_here
ENCRYPTION_KEY=your_staging_encryption_key_here
COOKIE_SECRET=your_staging_cookie_secret_here

# Database Configuration (PRIVATE - staging database)
DATABASE_URL=postgresql://staging_user:staging_pass@staging-db:5432/stockpulse_staging
REDIS_URL=redis://staging-redis:6379

# CORS and Security (PRIVATE - staging domains)
CORS_ORIGIN=https://staging.stockpulse.com,https://staging-www.stockpulse.com
ENABLE_HTTPS=true
TRUST_PROXY=true

# Push Notification Private Key (PRIVATE - staging key)
VAPID_PRIVATE_KEY=your_staging_vapid_private_key_here

# Email Configuration (PRIVATE - use test email service)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_SECURE=false
SMTP_USER=your_mailtrap_username_here
SMTP_PASS=your_mailtrap_password_here
FROM_EMAIL=staging@stockpulse.com

# External Service Keys (PRIVATE - staging/test keys)
WEBHOOK_SECRET=your_staging_webhook_secret_here
RATE_LIMIT_REDIS_URL=redis://staging-rate-limit:6379
MONITORING_API_KEY=your_staging_monitoring_key_here

# Third-party Integrations (PRIVATE - test keys)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_test_webhook_secret_here
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/staging/webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/staging/webhook

# Monitoring and Observability (PRIVATE - staging instances)
SENTRY_AUTH_TOKEN=your_staging_sentry_token_here
DATADOG_API_KEY=your_staging_datadog_key_here

# Rate Limiting (PRIVATE - more relaxed for testing)
RATE_LIMIT_MAX_REQUESTS=2000
RATE_LIMIT_WINDOW_MS=900000
CSRF_SECRET=your_staging_csrf_secret_here
SESSION_SECRET=your_staging_session_secret_here

# =============================================================================
# STAGING SPECIFIC CONFIGURATION
# =============================================================================

# Build Configuration
ANALYZE_BUNDLE=true
GENERATE_SOURCEMAP=true

# Logging and Debugging (More verbose for testing)
DEBUG_MODE=true
VERBOSE_LOGGING=true

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# Feature Toggles for Staging
ENABLE_API_CACHE=true
ENABLE_REDIS_CACHE=true
ENABLE_COMPRESSION=true
ENABLE_SECURITY_HEADERS=true
ENABLE_TEST_DATA=true
ENABLE_DEBUG_PANEL=true