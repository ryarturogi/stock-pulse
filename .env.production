# =============================================================================
# PRODUCTION ENVIRONMENT VARIABLES
# =============================================================================
# WARNING: This file contains example values for production deployment.
# DO NOT commit actual production secrets to version control!
# Use your hosting platform's environment variable system instead.
# =============================================================================

# =============================================================================
# PUBLIC ENVIRONMENT VARIABLES (Client-side accessible via NEXT_PUBLIC_)
# WARNING: These will be visible in the browser bundle!
# =============================================================================

# Application Configuration (Safe to expose)
NEXT_PUBLIC_APP_NAME=StockPulse
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags (Safe to expose)
NEXT_PUBLIC_FEATURE_DARK_MODE=true
NEXT_PUBLIC_FEATURE_NOTIFICATIONS=true
NEXT_PUBLIC_FEATURE_OFFLINE_MODE=true

# PWA Configuration (Safe to expose)
NEXT_PUBLIC_PWA_ENABLED=true

# Performance Settings (Safe to expose - production optimized)
NEXT_PUBLIC_CACHE_TTL=900000
NEXT_PUBLIC_REQUEST_TIMEOUT=10000

# Push Notification Public Key (Safe to expose - generated per environment)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_production_vapid_public_key_here

# Analytics IDs (Safe to expose - these are meant to be public)
NEXT_PUBLIC_ANALYTICS_ID=your_google_analytics_id_here
NEXT_PUBLIC_SENTRY_DSN=your_sentry_public_dsn_here

# =============================================================================
# PRIVATE ENVIRONMENT VARIABLES (Server-side only)
# These are NOT exposed to the browser and remain secure
# =============================================================================

# Environment Configuration
NODE_ENV=production
LOG_LEVEL=warn

# Stock API Keys (PRIVATE - should not be exposed to client!)
# Get these from: https://finnhub.io/ and https://www.alphavantage.co/
FINNHUB_API_KEY=your_production_finnhub_api_key_here
ALPHA_VANTAGE_API_KEY=your_production_alpha_vantage_api_key_here

# Internal API Configuration (PRIVATE)
API_BASE_URL=https://api.stockpulse.com
INTERNAL_API_SECRET=your_strong_internal_api_secret_here

# Security Settings (PRIVATE - Generate strong secrets!)
JWT_SECRET=your_very_strong_jwt_secret_minimum_32_characters_here
ENCRYPTION_KEY=your_strong_encryption_key_32_characters_minimum
COOKIE_SECRET=your_cookie_signing_secret_here

# Database Configuration (PRIVATE)
DATABASE_URL=postgresql://username:password@host:port/database
REDIS_URL=redis://username:password@host:port

# CORS and Security (PRIVATE - server configures these)
CORS_ORIGIN=https://stockpulse.com,https://www.stockpulse.com
ENABLE_HTTPS=true
TRUST_PROXY=true

# Push Notification Private Key (PRIVATE - never expose!)
VAPID_PRIVATE_KEY=your_production_vapid_private_key_here

# Email Configuration (PRIVATE)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your_smtp_username_here
SMTP_PASS=your_smtp_password_here
FROM_EMAIL=noreply@stockpulse.com

# External Service Keys (PRIVATE)
WEBHOOK_SECRET=your_webhook_verification_secret_here
RATE_LIMIT_REDIS_URL=redis://rate-limit-instance:6379
MONITORING_API_KEY=your_monitoring_service_api_key_here

# SSL/TLS Configuration (PRIVATE)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key
SSL_CA_PATH=/path/to/ssl/ca-bundle.crt

# Backup and Storage (PRIVATE)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=stockpulse-production-assets

# Content Delivery Network (PRIVATE)
CDN_URL=https://cdn.stockpulse.com
CDN_API_KEY=your_cdn_api_key_here

# Third-party Integrations (PRIVATE)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook

# Monitoring and Observability (PRIVATE)
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here
DATADOG_API_KEY=your_datadog_api_key_here
NEW_RELIC_LICENSE_KEY=your_newrelic_license_key_here

# Rate Limiting and Security (PRIVATE)
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=900000
CSRF_SECRET=your_csrf_protection_secret_here
SESSION_SECRET=your_session_secret_key_here

# API Rate Limits for External Services (PRIVATE)
FINNHUB_RATE_LIMIT=60
ALPHA_VANTAGE_RATE_LIMIT=5

# =============================================================================
# DEPLOYMENT SPECIFIC VARIABLES
# =============================================================================

# Build Configuration
ANALYZE_BUNDLE=false
GENERATE_SOURCEMAP=false

# Logging and Debugging
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# Feature Toggles for Production
ENABLE_API_CACHE=true
ENABLE_REDIS_CACHE=true
ENABLE_COMPRESSION=true
ENABLE_SECURITY_HEADERS=true

# =============================================================================
# PLATFORM-SPECIFIC VARIABLES (Examples)
# =============================================================================

# Vercel
# VERCEL_ENV=production
# VERCEL_URL=stockpulse.vercel.app

# Netlify
# NETLIFY_SITE_ID=your_netlify_site_id_here
# NETLIFY_BUILD_HOOK=your_netlify_build_hook_url_here

# Railway
# RAILWAY_ENVIRONMENT=production
# RAILWAY_PROJECT_ID=your_railway_project_id_here

# AWS Lambda/Serverless
# AWS_LAMBDA_FUNCTION_NAME=stockpulse-production
# AWS_LAMBDA_FUNCTION_VERSION=$LATEST

# Docker
# DOCKER_IMAGE_TAG=stockpulse:latest
# CONTAINER_PORT=3000

# =============================================================================
# SECURITY REMINDERS
# =============================================================================
# 1. Never commit this file with real secrets to version control
# 2. Use your hosting platform's secret management system
# 3. Rotate secrets regularly (quarterly recommended)
# 4. Use different secrets for each environment (dev/staging/prod)
# 5. Monitor for secret leaks in logs and error messages
# 6. Use strong, randomly generated secrets (minimum 32 characters)
# 7. Enable environment variable encryption if available
# 8. Restrict access to production environment variables
# 9. Audit secret access logs regularly
# 10. Have a secret rotation plan and incident response procedure
# =============================================================================