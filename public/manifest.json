      "src": "/icons/icon-512x512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "maskable any"
    }
  ],
  "shortcuts": [
    {
      "name": "Portfolio",
      "short_name": "Portfolio",
      "description": "View your stock portfolio",
      "url": "/portfolio",
      "icons": [
        {
          "src": "/icons/portfolio-96x96.svg",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Watchlist",
      "short_name": "Watchlist",
      "description": "View your stock watchlist",
      "url": "/watchlist",
      "icons": [
        {
          "src": "/icons/watchlist-96x96.svg",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "notification": {
    "action": "view",
    "badge": "/icons/icon-72x72.svg",
    "icon": "/icons/icon-192x192.svg",
    "lang": "en",
    "tag": "stockpulse-notification",
    "vibrate": [200, 100, 200],
    "requireInteraction": true,
    "silent": false
  },
  "permissions": [
    "notifications"
  ],
  "protocol_handlers": [
    {
      "protocol": "web+stockpulse",
      "url": "/?symbol=%s"
    }
  ]
}