# =============================================================================
# STOCK PULSE - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control!
# =============================================================================

# =============================================================================
# PUBLIC ENVIRONMENT VARIABLES (Client-side accessible)
# These will be visible in the browser bundle - only include safe values
# =============================================================================

# Application Configuration
NEXT_PUBLIC_APP_NAME=StockPulse
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
NEXT_PUBLIC_FEATURE_DARK_MODE=true
NEXT_PUBLIC_FEATURE_NOTIFICATIONS=true
NEXT_PUBLIC_FEATURE_PWA=true

# =============================================================================
# PRIVATE ENVIRONMENT VARIABLES (Server-side only)
# These are NOT exposed to the browser and remain secure
# =============================================================================

# Environment Configuration
NODE_ENV=development

# Stock API Configuration
# Get your API key from: https://finnhub.io/
FINNHUB_API_KEY=your_finnhub_api_key_here

# Push Notifications (Optional - for PWA notifications)
# Generate these with: npm run generate-vapid
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# These are only needed for local development
# Remove or comment out for production deployment

# API Rate Limiting (Development)
API_RATE_LIMIT=100
API_RATE_WINDOW_MS=60000

# Debug Settings
DEBUG_MODE=true
VERBOSE_LOGGING=false
